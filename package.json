{
  "name": "@spaceagetv/electron-progress-window",
  "version": "1.0.11",
  "description": "Display single or multiple progress bars in an Electron app",
  "repository": {
    "type": "git",
    "url": "https://github.com/spaceagetv/electron-progress-window.git"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "npm run build:cjs && npm run build:esm && npm run copy-html",
    "build:docs": "npm run build && npm run docs",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts . --fix",
    "semantic-release": "semantic-release",
    "test": "mocha -r ts-node/register 'test/**/*.test.ts'",
    "test:coverage": "nyc mocha -r ts-node/register 'test/**/*.test.ts'",
    "copy-html": "npm run copy-html:cjs && npm run copy-html:esm",
    "copy-html:cjs": "ncp src/index.html dist/cjs/index.html",
    "copy-html:esm": "ncp src/index.html dist/esm/index.html",
    "extract-api": "api-extractor run --local",
    "generate-docs": "api-documenter markdown --input-folder temp --output-folder docs",
    "docs": "npm run extract-api && npm run generate-docs"
  },
  "keywords": [
    "electron",
    "mocks",
    "testing",
    "unit testing",
    "stubbing",
    "spies",
    "sinon"
  ],
  "author": "Jeff Robbins",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/api-documenter": "^7.22.6",
    "@microsoft/api-extractor": "^7.35.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@semantic-release/npm": "^10.0.3",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/lodash": "^4.14.194",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.15",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "electron": "^24.3.1",
    "electron-mocks": "^1.1.3",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "mocha": "^10.2.0",
    "ncp": "^2.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.2",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "typed-emitter": "^2.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "sinon": "^15.1.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
